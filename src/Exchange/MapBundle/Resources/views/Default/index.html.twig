{% extends 'ExchangeMapBundle::map_layout.html.twig' %}

{% block content %}
    <div id="map" style="width: 100%; height: 200px"></div>
{% endblock content %}

{% block panel %}
    <p>Настройки валют</p>
    <select class="js-filter-switch" name="slider" id="flip-a" data-role="slider">
        <option value="H">Покупка</option>
        <option value="L">Продажа</option>
    </select>
    <fieldset class="js-filter-radio" data-role="controlgroup" data-iconpos="right">
        <legend>Выберите валюту:</legend>
        <input type="radio" name="radio-choice-w-6" id="radio-choice-w-6a" value="USD" checked="checked">
        <label for="radio-choice-w-6a">USD</label>
        <input type="radio" name="radio-choice-w-6" id="radio-choice-w-6b" value="EUR">
        <label for="radio-choice-w-6b">EUR</label>
        <input type="radio" name="radio-choice-w-6" id="radio-choice-w-6c" value="RUB">
        <label for="radio-choice-w-6c">RUB</label>
    </fieldset>
{% endblock panel %}

{% block footer %}
    <input class="js-filter-slider" type="range" name="slider" value="25" min="0" max="100"  />
{% endblock footer %}