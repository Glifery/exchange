{% extends 'ExchangeMapBundle::map_layout.html.twig' %}

{% block content %}
    <div id="map" style="width: 100%; height: 600px"></div>
    <script src="{{ asset('data/exchange.js') }}"></script>
    <script src="{{ asset('bundles/exchangemap/js/map.js') }}"></script>
{% endblock content %}

{% block panel %}
    <p>Настройки валют</p>
    <select name="slider" id="flip-a" data-role="slider">
        <option value="H">Покупка</option>
        <option value="L">Продажа</option>
    </select>
    <fieldset data-role="controlgroup" data-iconpos="right">
        <legend>Выберите валюту:</legend>
        <input type="radio" name="radio-choice-w-6" id="radio-choice-w-6a" value="on" checked="checked">
        <label for="radio-choice-w-6a">USD</label>
        <input type="radio" name="radio-choice-w-6" id="radio-choice-w-6b" value="off">
        <label for="radio-choice-w-6b">EUR</label>
        <input type="radio" name="radio-choice-w-6" id="radio-choice-w-6c" value="other">
        <label for="radio-choice-w-6c">RUS</label>
    </fieldset>
{% endblock panel %}

{% block footer %}
    <input type="range" name="slider" value="25" min="0" max="100"  />
{% endblock footer %}